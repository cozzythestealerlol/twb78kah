uiListLayout.Parent = scrollingFrame
uiListLayout.SortOrder = Enum.SortOrder.LayoutOrder
uiListLayout.Padding = UDim.new(0,5)

-- Rarity ranking
local rarityOrder = {
    Secret = 1,
    God = 2,
    Mythic = 3,
    Legendary = 4,
    Epic = 5,
    Rare = 6,
    Uncommon = 7,
    Common = 8
}

local charactersData = {}

local function updateCanvasSize()
    scrollingFrame.CanvasSize = UDim2.new(0,0,0, uiListLayout.AbsoluteContentSize.Y + 10)
end

local function rebuildGUI()
    for _, child in ipairs(scrollingFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    table.sort(charactersData, function(a,b)
        return (rarityOrder[a.Rarity] or 9) < (rarityOrder[b.Rarity] or 9)
    end)

    for _, data in ipairs(charactersData) do
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -10, 0, 50)
        btn.BackgroundColor3 = frame.BackgroundColor3
        btn.BackgroundTransparency = 0.35
        btn.TextColor3 = Color3.fromRGB(255,255,255)
        btn.Font = Enum.Font.Gotham
        btn.TextSize = 18
        btn.Text = data.CharacterId .. "\n" .. data.Rarity
        btn.TextWrapped = true
        btn.TextScaled = false
        btn.TextXAlignment = Enum.TextXAlignment.Center
        btn.TextYAlignment = Enum.TextYAlignment.Center
        btn.Parent = scrollingFrame

        local btnCorner = Instance.new("UICorner", btn)
        btnCorner.CornerRadius = UDim.new(0,12)

        btn.MouseButton1Click:Connect(function()
            if data.Pad and data.Pad:IsDescendantOf(workspace) then
                if player.Character and player.Character.PrimaryPart then
                    player.Character:SetPrimaryPartCFrame(data.Pad:GetPivot())
                end
            end
        end)
    end

    updateCanvasSize()
end

local function scanPad(pad)
    local character = pad:FindFirstChild("Character")
    if character then
        local rarity = "Unknown"
        local charInfo = character:FindFirstChild("CharacterInfo")
        if charInfo then
            local frameObj = charInfo:FindFirstChild("Frame")
            if frameObj then
                local rarityLabel = frameObj:FindFirstChild("Rarity")
                if rarityLabel and rarityLabel:IsA("TextLabel") then
                    rarity = rarityLabel.Text
                end
            end
        end

        for _, data in ipairs(charactersData) do
            if data.Character == character then return end
        end

        table.insert(charactersData,{Character=character,Pad=pad,CharacterId=character:GetAttribute("CharacterId") or "Unknown", Rarity=rarity})
    end
end

local function scanNPCPads(npcPads)
    for _, pad in ipairs(npcPads:GetChildren()) do
        if pad:IsA("Folder") or pad:IsA("Model") then
            scanPad(pad)
            pad.ChildAdded:Connect(function(child)
                if child.Name=="Character" then scanPad(pad) end
            end)
        end
    end
    npcPads.ChildAdded:Connect(function(newPad)
        scanPad(newPad)
        newPad.ChildAdded:Connect(function(child)
            if child.Name=="Character" then scanPad(newPad) end
        end)
    end)
end

local function scanBases()
    local map = workspace:FindFirstChild("Map")
    if not map then return end
    local basesFolder = map:FindFirstChild("Bases")
    if not basesFolder then return end
    for i=1,8 do
        local base = basesFolder:FindFirstChild(tostring(i))
        if base then
            local important = base:FindFirstChild("Important")
            if important then
                local npcPads = important:FindFirstChild("NPCPads")
                if npcPads then
                    scanNPCPads(npcPads)
                end
            end
        end
    end
end

-- Auto-update every 5 seconds
while true do
    charactersData = {}
    scanBases()
    rebuildGUI()
    wait(5)
end
		
		local func = loadstring(CharFinderScript)
		func()
	end)
end)
